{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "next",
    "next/core-web-vitals",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": ["error", { "singleQuote": true, "semi": false }],
    "react/react-in-jsx-scope": "off",
    "react/jsx-props-no-spreading": "off",
    "@next/next/no-img-element": "off",
    "no-console": "warn",
    "no-unused-vars": "warn"
  }
}